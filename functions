	ssh -t lxplus.cern.ch "ssh uwws3 'cd dissertation; make' " && ssh lxplus.cern.ch "scp uwws3:~/dissertation/uwthesis.pdf ." && scp lxplus.cern.ch:uwthesis.pdf . && acroread uwthesis.pdf
    else
