read_info(){
    pushd $HOME

    if [ -f info ]; then
       echo 'file is open'
       return
    fi

    gpg info.gpg
    e info
    if [ -f info~ ]; then
	echo 'backup file y/n'
	read result
	if [ "$result" == 'y' ]; then
	    rm info.gpg
	    gpg -c info
	    cp info.gpg info.gpg.bak
	fi
	rm info~	
    fi
    rm info
    popd    
}
